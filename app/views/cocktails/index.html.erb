
<div class="container">
  <div class="row">

<% @cocktails.each do |cocktail| %>
<div class="col-xs-12 col-sm-6">
<div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= cocktail.photo.url(:card) %>);">

  <div class="card-description">
    <h2><%= cocktail.name %></h2>

  </div>
  <a class="card-link" href= <%= cocktail_path(cocktail)%> ></a>
</div>
 </div>
 <% end %>
</div>
</div>
